<div class="uk-container-center uk-panel uk-panel-box">
  <%= form_tag locations_path, method: :post, html: { class: 'uk-form' } do %>
      <div class="uk-text-center">
        <div class="uk-grid">
          <div class="uk-width-1-1">
            <div class="uk-form-row">
              <%= label_tag :name, 'Név:' %>
              <%= text_field_tag :name, 'Név' %>
            </div>
            <div class="uk-form-row">
              <%= label_tag :is_active, 'Aktív?:' %>
              <%= check_box_tag :is_active %>
            </div>
            <div class="uk-form-row">
              <%= submit_tag 'Tovább', class: 'uk-button'  %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
